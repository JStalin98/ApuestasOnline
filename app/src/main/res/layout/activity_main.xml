<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jstalin.apuestasonline.MainActivity">


    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_registry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_registry"
        android:onClick="openRegistry"/>

    <Button
        android:id="@+id/button_bets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_bets"
        android:onClick="openBets"/>

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_settings"
        android:onClick="openSettings"/>

    <Button
        android:id="@+id/button_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_draw"
        android:onClick="openDraw"/>

</LinearLayout>
